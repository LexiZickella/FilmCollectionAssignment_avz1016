@{
    ViewData["Title"] = "Film";
}
@model FilmCollectionAssignment.Models.AddFilm
<h1>This is the Film Link Page</h1>

<div>
    @* form for the inputs from the user, with submit type button*@
    <form method="post">

        @* made entries required to meet requirements *@
        <div asp-validation-summary="All"></div> 

        <label hidden asp-for="FilmId"></label>
        <input type="hidden" asp-for="FilmId" />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required/><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" required>
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" required/><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required/><br />

        <label asp-for="Rating">Rating:</label>
        <select required asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select required asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br />

        <label asp-for="Lent">Lent To:</label>
        <input asp-for="Lent"/><br />

        <label asp-for="Notes">Notes:</label>
        <input maxlength="25" asp-for="Notes" /><br />

        <button type="submit">Submit New Film</button>
    </form>
</div>